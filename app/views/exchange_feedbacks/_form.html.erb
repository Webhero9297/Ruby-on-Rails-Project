<%= form_for(@exchange_feedback, url: exchange_feedback_url, html: {class: 'well', id: 'exchange-feedback'}) do |f| %>

  <% if @exchange_feedback.errors.any? %>
  <section id="error-explanation" class="alert alert-danger">
    <h1 class="alert-heading"><%= @exchange_feedback.errors.count %> <%= t('global.errors') %> <%= t('error.information_stopped')%>:</h1>
    <ul class="error-explanation">
      <% @exchange_feedback.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
      <% end %>
    </ul>
  </section>
  <% end %>

  <fieldset>
    <h2 class="section-header first">1. <%= t('exchange_feedbacks.header.was_this_your_first_exchange') %></h2>
    <div class="control-group">
      <div class="controls">
        <%= label_tag('first-exchange-yes', class: 'radio inline') do %>
          <%= f.radio_button(:first_exchange, true, id: 'first-exchange-yes') %>
          <%= t('sitewide.opinion.yes') %>
        <% end %>
      
        <%= label_tag('first-exchange-no', class: 'radio inline') do %>
          <%= f.radio_button(:first_exchange, false, id: 'first-exchange-no') %>
          <%= t('global.no') %>
        <% end %>
      </div>
    </div>
  </fieldset>
  
  
  <fieldset>
    <h2 class="section-header">2. <%= t('exchange_feedbacks.header.how_would_you_rate_this_exchange_compared_to_previous') %></h2>
    <div class="control-group">
      <div class="controls">
        <%= label_tag('rate-exchange-expected', class: 'radio') do %>
          <%= f.radio_button(:expectations, 'expected', id: 'rate-exchange-expected') %>
          <%= t('exchange_feedbacks.as_expected') %>
        <% end %>
        
        <%= label_tag('rate-exchange-better', class: 'radio') do %>
          <%= f.radio_button(:expectations, 'better', id: 'rate-exchange-better') %>
          <%= t('exchange_feedbacks.better_than_expected') %>
        <% end %>
        
        <%= label_tag('rate-exchange-below', class: 'radio') do %>
          <%= f.radio_button(:expectations, 'below', id: 'rate-exchange-below') %>
          <%= t('exchange_feedbacks.below_expectations') %>
        <% end %>
      </div>
    </div>
  </fieldset>
  
  
  <fieldset>
    <h2 class="section-header">3. <%= t('exchange_feedbacks.header.how_would_you_rate_this_exchange') %></h2>
    <div class="control-group">
      <div class="controls">
        <%= label_tag('rate-expectations-1', class: 'radio') do %>
          <%= f.radio_button(:rating, 1, id: 'rate-expectations-1') %>
          <%= t('global.poor') %>
        <% end %>
        
        <%= label_tag('rate-expectations-2', class: 'radio') do %>
          <%= f.radio_button(:rating, 2, id: 'rate-expectations-2') %>
          <%= t('global.not_so_good') %>
        <% end %>
        
        <%= label_tag('rate-expectations-3', class: 'radio') do %>
          <%= f.radio_button(:rating, 3, id: 'rate-expectations-3') %>
          <%= t('global.good') %>
        <% end %>
        
        <%= label_tag('rate-expectations-4', class: 'radio') do %>
          <%= f.radio_button(:rating, 4, id: 'rate-expectations-4') %>
          <%= t('global.better') %>
        <% end %>
        
        <%= label_tag('rate-expectations-5', class: 'radio') do %>
          <%= f.radio_button(:rating, 5, id: 'rate-expectations-5') %>
          <%= t('global.excellent') %>
        <% end %>
      </div>
    </div>
  </fieldset>
  
  
  <fieldset>
    <h2 class="section-header">4. <%= t('exchange_feedbacks.header.would_you_exchange_with_this_intervac_member') %></h2>
    <div class="control-group">
      <div class="controls">
        <%= label_tag('recommend-exchange-yes', class: 'radio inline') do %>
          <%= f.radio_button(:recommend, true, id: 'recommend-exchange-yes') %>
          <%= t('sitewide.opinion.yes') %>
        <% end %>
      
        <%= label_tag('recommend-exchange-no', class: 'radio inline') do %>
          <%= f.radio_button(:recommend, false, id: 'recommend-exchange-no') %>
          <%= t('global.no') %>
        <% end %>
      </div>
    </div>
  </fieldset>
  
  
  <fieldset>
    <h2 class="section-header upper">5. <%= t('exchange_feedbacks.header.write_about_the_family_you_exchanged_with') %></h2>
    <%= f.text_area(:impression, rows: '8', cols: '52', class: 'span12') %>
  </fieldset>
  
  
  <fieldset>
    <h2 class="section-header">6. <%= t('exchange_feedbacks.header.would_you_be_willing_to_be_contacted_by_the_press') %></h2>
    <div class="control-group">
      <div class="controls">
        <%= label_tag('press-contact-yes', class: 'radio inline') do %>
          <%= f.radio_button(:press_contact, true, id: 'press-contact-yes') %>
          <%= t('sitewide.opinion.yes') %>
        <% end %>
      
        <%= label_tag('press-contact-no', class: 'radio inline') do %>
          <%= f.radio_button(:press_contact, false, id: 'press-contact-no') %>
          <%= t('global.no') %>
        <% end %>
      </div>
    </div>
  </fieldset>
  
  
  <fieldset>
    <h2 class="section-header">7. <%= t('exchange_feedbacks.header.how_could_intervac_be_improved') %></h2>
    <%= f.text_area(:improvements, rows: '8', cols: '52', class: 'span12') %>
  </fieldset>
  
  <fieldset class="form-actions">
    <%= f.button( t('button.send_feedback'), class: 'btn btn-primary' ) %>
  </fieldset>
  
<% end %>
<div class="mb10">
  <%= link_to(t('global.edit'), edit_listing_exchange_type_url(@listing), remote: true, id: 'btn-exchange-types', class: 'btn btn-small') %>
</div>
<table class="table table-striped table-bordered table-condensed" id="exchange-types-list">
  <tbody>
  <% exchange_types.each do |exchange_type| %>
    <tr>
      <td class="detail"><%= t(exchange_type.msgid) %></td>
      <td class="value">
        <% if listing.exchange_types.include?(exchange_type.msgid) %>
          <span class="badge badge-success"><%= t('global.yes') %></strong>
        <% else %>
          <span class="badge"><%= t('global.no') %></span>
        <% end %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>
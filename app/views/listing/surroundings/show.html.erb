<div class="row">
  <div class="span3">
    <%= render(partial: 'listings/change_my_listing_menu', locals: {listing: @listing}) %>
  </div>
  <div class="span9">
    <div class="plate">
      <%= render(partial: '/layouts/modules/screen_header', locals: {header: "#{t('listing.header.surroundings_photos_and_texts')} - #{@listing.listing_number}", body_text: t('listings.surroundings_photos_body_text')}) %>
      <%= render(partial: "listing/surroundings/airport", locals: {listing: @listing, header: t('listings.nearest_airport'), section_id: 'closest_airport'}, layout: '/layouts/modules/plate_section') %>
      <%= render(partial: "listing/surroundings/description", locals: {listing: @listing, header: t('listings.neighborhood_description'), section_id: 'surroundings-description'}, layout: '/layouts/modules/plate_section') %>
      <%= render(partial: "surroundings_figure_blocks", locals: {listing_images: @listing_images, listing: @listing, header: t('listings.neighborhood_photos'), section_id: 'Neighborhood-images'}, layout: '/layouts/modules/plate_section') %>

      <div class="row-fluid">
        <div class="span12">
          <section id="surroundings" class="group">
            <h1 class="page-header"><%= t('listings.label.describe_your_surroundings') %></h1>
            <div class="content">
              <div class="mb10">
                <%= link_to(t('global.edit'), edit_listing_surrounding_url(@listing), remote: true, id: 'btn-surroundings', class: 'btn btn-small') %>
              </div>
              <div id="surroundings-container">
                <%= render(partial: '/listing/surroundings/show', locals:{listing: @listing}) %>
              </div>
            </div>
          </section>
        </div>
      </div>

    </div>
  </div>
</div>

<script type="text/javascript">
jQuery(document).ready(function($) {

  $('.pluploader').each(function(){
    enable_image_upload(this);
  });

  enable_image_sorting('listing');
  
});
</script>
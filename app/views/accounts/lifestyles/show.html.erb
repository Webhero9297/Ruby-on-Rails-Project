<div class="row">
  <div class="span3">
    <%= render(partial: '/listings/change_my_listing_menu', locals: {listing: @listing}) %>
  </div>
  <div class="span9">
    <div class="plate">
      <%= render(partial: '/layouts/modules/screen_header', locals: {header: "#{t('listing.header.lifestyle_photos_and_texts')} - #{@listing.listing_number}", body_text: t('listings.lifestyle_photos_body_text')}) %>  
      <%= render(partial: 'lifestyle_placeholder', locals: {profile: @profile, listing: @listing, header: t('listings.lifestyle_presentation_text'), section_id: 'lifestyle-presentation'}, layout: 'layouts/modules/plate_section') %>
      <%= render(partial: "lifestyle_figure_blocks", locals: {profile_images: @profile_images, account: @account, header: t('accounts.lifestyle.header.lifestyle_photos'), section_id: 'lifestyle-images'}, layout: '/layouts/modules/plate_section') %>
    </div>
  </div>
</div>
<script type="text/javascript">
jQuery(document).ready(function($) {

  $('.pluploader').each(function(){
    enable_image_upload(this);
  });

  enable_image_sorting('profile');

if(window.location.hash && window.location.hash == '#lifestyle-presentation') {
    $('#btn-profile-lifestyle').click();
    window.location.hash = '';
  }
  
});
</script>
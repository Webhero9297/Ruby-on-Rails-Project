<tr id="child-<%= @child.id %>">
  <td colspan="4">
<%= form_for(@child, url: account_profiles_child_url(@account, @child), method: :put, remote: true, :html => {id: 'edit-child-form',class: 'form-vertical'}) do |f| %>
<% if @child.errors.any? %>
<section id="error-explanation" class="alert alert-danger">
  <h1 class="alert-heading"><%= @child.errors.count %> <%= t('global.errors') %> <%= t('error.information_stopped')%>:</h1>
  <ul class="error-explanation">
    <% @child.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
    <% end %>
  </ul>
</section>
<% end %>
<fieldset>
  
  <%= f.select(:yob, options_for_select((Time.new.year.to_i.downto(1956)).collect {|s| [s, s]}, @child['yob'])) %>
  
  <%= f.label(:gender_boy) do %>
    <%= f.radio_button(:gender, 'boy') %>
    <%= t('global.boy') %>
  <% end %>
  
  <%= f.label(:gender_girl) do %>
    <%= f.radio_button(:gender, 'girl') %>
    <%= t('global.girl') %>
  <% end %>
</fieldset>
<fieldset class="form-actions">
  <%= f.button(t('button.save'), placeholder: 'Occupation', class: 'btn btn-primary') %>
  <%= link_to(t('global.cancel'), cancel_account_profiles_child_url(@account, @child), remote: true, class: 'cancel-edit-child') %>
</fieldset>
<% end %>
</td>
</tr>
<% body_id 'member-management' %>
<div class="row-fluid">
  <div class="span12">
    <p><%= link_to('Back', member_filters_path, class: 'btn') %></p>
    <div class="alert alert-info">
      <p class="alert-message">This account has not been confirmed and therefor only a small portion of the information is available.</p>
    </div>
  </div>
</div>

<div class="row-fluid">
  <div class="span12">
    <div class="plate">
      <%= render(partial: 'account_uncomfirmed_information', locals: {header: 'Account information', section_id: 'account-uncomfirmed-information'}, layout: '/layouts/modules/plate_section') %>
      <%= render(partial: 'account_users', locals: {header: 'Account users', section_id: 'account-users'}, layout: '/layouts/modules/plate_section') %>
      <%= render(partial: 'contact_information', locals: {header: 'Contact information', section_id: 'contact-information'}, layout: '/layouts/modules/plate_section') %>
      <%= render(partial: 'account_transfer', locals: {header: 'Transfer account to another country', section_id: 'account-transfer'}, layout: '/layouts/modules/plate_section') %>
      <%= render(partial: 'terminate_account', locals: {header: 'Terminate and delete a membership from the database', section_id: 'terminate-account'}, layout: '/layouts/modules/plate_section') %>
    </div>
  </div>
</div>
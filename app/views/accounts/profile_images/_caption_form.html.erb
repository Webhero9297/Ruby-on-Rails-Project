<%= form_for(image, url: update_caption_account_profiles_image_url(account, image), remote: true) do |f|%>
    <%= f.text_field(:caption, maxlength: 128, class: 'span12', id: "profile-image-caption-form-#{image.id}") %>
    <%= f.submit(t('button.save'), class: 'btn btn-primary btn-small') %>
    <%= link_to(t('button.cancel'), cancel_caption_account_profiles_image_path(account, image), class: 'btn btn-link btn-small', remote: true) %>
<% end %>
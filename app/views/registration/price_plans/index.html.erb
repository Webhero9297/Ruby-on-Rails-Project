        <h2 class="price"><%= t('users.registrations.free') %></h2>
        <span class="button"><%= t('users.plans_and_pricing.choose_plan') %></span>
        <span class="details">
          <span class="description-item">
            <i class="fa fa-check-circle"></i>
            <span class="hidden-md hidden-lg"><%= t('application.price_comparison.includes_photos_and_text') %> </span>
            <i class="fa fa-question-circle hidden-md hidden-lg" data-toggle="tooltip" title="<%= t('application.price_comparison.includes_photos_and_text_more') %>"></i>
          </span>
          <span class="description-item">
            <i class="fa fa-check-circle"></i> 
            <span class="hidden-md hidden-lg"><%= t('application.price_comparison.able_to_send_proposals') %> </span>

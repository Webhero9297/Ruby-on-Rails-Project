    <h2 class="top-header">
      <span class="top-header-label"><%= t('application.plans_and_pricing.usptitle') %></span>
    </h2>
    <div class="row usps">
      <%= render(partial: 'pages/usps') %>
      <div class="col-md-12 usp-text">
        <p><%= t('application.plans_and_pricing.usptext') %></p>
      </div>
    </div>

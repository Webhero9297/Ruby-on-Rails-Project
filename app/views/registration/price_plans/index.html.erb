<script type="text/javascript">
  $('#country-residence').on('change', function(event) {
    window.location.replace('http://<%= Rails.application.config.main_domain %>/country/change/' + $(this).val());
  });
  $( document ).on( 'click', '.js-toggle-more', function( e ){
    e.preventDefault();
    $( '.plans' ).toggleClass( 'more' );
  });
  $(document).ready(function(){
    $('[data-toggle="tooltip"]').tooltip(); 
  });
</script>

          <span class="description-item">
            <i class="fa fa-check-circle"></i> 
            <span class="hidden-md hidden-lg"><%= t('application.price_comparison.receive_newsletter') %> </span>
            <i class="fa fa-question-circle hidden-md hidden-lg" data-toggle="tooltip" title="<%= t('application.price_comparison.receive_newsletter_more') %>"></i>
          </span>

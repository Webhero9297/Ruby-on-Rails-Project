<div class="row-fluid">
    <div class="span3">
        <%= render(partial: 'conversation_menu') %>
    </div>
    <div class="span9">
        <div class="plate">
            <%= render(locals: {section_id: 'message-envelopes', header: t('conversation.header.inbox')}, layout: '/layouts/modules/plate_section') do %>

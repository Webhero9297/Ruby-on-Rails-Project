<p class="result-notice">Accounts found: <%= accounts.count %></p>
<table id="member-table" class="table table-striped table-condensed">
  <thead>
    <tr>
      <th class="name sorter" data-sort="name" data-direction="<%= @direction %>" data-country-codes="<%= @country_codes %>" data-filter="<%= @filter %>" data-page="<%= @page %>" data-query="<%= @query %>">Name<i class="icon-resize-vertical"></i></th>
      <th class="email sorter" data-sort="email" data-direction="<%= @direction %>" data-country-codes="<%= @country_codes %>" data-filter="<%= @filter %>" data-page="<%= @page %>" data-query="<%= @query %>">Primary / Contact email<i class="icon-resize-vertical"></i></th>
      <th class="sorter" data-sort="country_short" data-direction="<%= @direction %>" data-country-codes="<%= @country_codes %>" data-filter="<%= @filter %>" data-page="<%= @page %>" data-query="<%= @query %>">Country<i class="icon-resize-vertical"></i></th>
      <th class="sorter" data-sort="expires_at" data-direction="<%= @direction %>" data-country-codes="<%= @country_codes %>" data-filter="<%= @filter %>" data-page="<%= @page %>" data-query="<%= @query %>">Expires<i class="icon-resize-vertical"></i></th>
      <th class="sorter" data-sort="listing" data-direction="<%= @direction %>" data-country-codes="<%= @country_codes %>" data-filter="<%= @filter %>" data-page="<%= @page %>" data-query="<%= @query %>">Listings<i class="icon-resize-vertical"></i></th>
    </tr>
  </thead>
  <tbody id="table-result">
    <% accounts.each do |account| %>
      <%= render(partial: '/member_filters/table_result', object: account, as: 'account') %>
    <% end %>
  </tbody>
</table>
<%= paginate accounts, :params => { :controller => 'member_filters', :action => 'sort', :direction => @current_direction, :sort => @sort_on, :country_codes => @country_codes, :change_order => 'no', :format => :js}, :remote => true %>
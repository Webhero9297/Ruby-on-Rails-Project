<% if show_menu? %>
<a href="javascript:void(0);" class="menu-toggle open-menu visible-xs"><i class="fa fa-bars"></i></a>
<div class="mobile-menu visible-xs">
	<div class="top">
		<div class="close-container">
			<a href="javascript:void(0);" class="menu-toggle close-menu"><i class="fa fa-times-circle"></i></a>
		</div>
		<div class="row">
	    	<%= render(partial: 'layouts/menus/header_user_actions') %>
		</div>
	</div>
	<nav class="main-nav">
	  <ul class="main-nav-items">
	      <li class="main-nav-item">
	        <%= link_to(t('navigation.public_navigation.home'), root_path, title: t('navigation.public_navigation.listings_title'), class: 'main-nav-link', id: 'home-link') %>
	      </li>
	      <li class="main-nav-item">
	        <%= link_to(t('navigation.public_navigation.listings'), searches_index_path, title: t('navigation.public_navigation.listings_title'), class: 'main-nav-link', id: 'search-link') %>
	      </li>
	      <li class="main-nav-item">
	        <%= link_to(t('navigation.public_navigation.home_exchange'), what_is_home_exchange_path, title: t('navigation.public_navigation.what_is_home_exchange_title'), class: 'main-nav-link', id: 'home-exchange-link')%>
	      </li>
	      <li class="main-nav-item">
	        <%= link_to(t('navigation.public_navigation.about_us'), facts_about_intervac_path, title: t('navigation.public_navigation.about_us_title'), class: 'main-nav-link', id: 'about-intervac-link')%>
	      </li>
	      <li class="main-nav-item">
	        <%=link_to(t('homepage.national_representatives.headline'), representatives_path, class: 'main-nav-link', id: 'representatives-link')%>
	      </li>
				<li class="main-nav-item">
					<%=link_to(t('homepage.price_plans.headline'), price_plans_path, class: 'main-nav-link', id: 'price_plans-link')%>
				</li>
	      <li class="main-nav-item">
	        <%=link_to(t('homepage.faq.headline'), faq_path, class: 'main-nav-link', id: 'faq-link')%>
	      </li>
	  </ul>
	</nav>
	<%= link_to(price_plans_path, class: 'free-trail-button') do %>
	    <%= t('homepage.free_membership_button') %><i class="fa fa-arrow-circle-right"></i>
	<% end %>
</div>
<div class="mobile-menu-backlayer"></div>
<script>
	$( document ).on( 'click', '.menu-toggle', function(){
		$( '.mobile-menu' ).toggleClass( 'open' );
		$( 'body' ).toggleClass( 'open-menu' );
	} )
</script>
<% end %>

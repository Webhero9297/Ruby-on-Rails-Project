  <div class="span12">
    <div class="well">
      <h2 class="section-header"><%= t('registration.credit_card_options') %></h2>
      <% if not @country.accept_av_solutions_text.empty? %>
      <div><%= markdown(@country.accept_av_solutions_text) %></div>
      <% end %>
      <p class="no-space"><%= link_to(t('global.with_credit_card'), french_payment_setup_order_path(@order), class: 'btn btn-primary') %></p>

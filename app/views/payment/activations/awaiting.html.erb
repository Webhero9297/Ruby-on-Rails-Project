<% body_id 'payment' %>
<div class="row-fluid">
  <div class="span12">
    <nav id="section-nav" role="secondary">
      <%= render(partial: '/payment/payment_settings_menu') %>
    </nav>
  </div>
</div>
<div class="row-fluid">
  <div class="span12">
    <div class="plate">
      <div class="plate-content">
        <h1 class="plate-header">Accounts awaiting activation</h1>
        <% if @accounts.empty? %>
          <div class="row-fluid">
            <div class="span12">
              <p>There are no accounts awaiting activation at this time.</p>
            </div>
          </div>
        <% else %>
          <%= render(partial: "account_awaiting_activation", collection: @accounts, as: :account) %>
        <% end %>
      </div>
    </div>
  </div>
</div>
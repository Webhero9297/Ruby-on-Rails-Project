<% body_id 'payment' %>
<div class="row-fluid">
  <div class="span12">
    <nav id="section-nav" role="secondary">
      <%= render(partial: '/payment/payment_settings_menu') %>
    </nav>
  </div>
</div>
<div class="row-fluid">
  <div class="span12">
    <div class="plate">
      <div class="plate-content">
        <h1 class="plate-header">Automatic activation</h1>
        <p>Allow automatic activation for the following countries.</p>
        
        <%= form_tag('/payment/automatic-activation', method: :put, html: {class: 'form-vertical'}) do %>  
          <table class="table table-striped table-condensed activation">
            <thead>
              <tr>
                <th class="allow">Allow</th>
                <th class="country">Country</th>
              </tr>
            </thead>
            <tbody>
              <% @countries.each do |country| %>
                <tr>
                  <td class="allow">
                    <fieldset>
                    <%= label_tag('countries', for: "country-#{country.id}") do %>
                      <%= hidden_field_tag("countries[]", false) %>
                      <%= check_box_tag('countries[]', country.id, country.allow_direct_access, id: "country-#{country.id}") %>
                    <% end %>
                    </fieldset>
                  </td>
                  <td class="country">
                    <%= t(country.msgid) %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
          <fieldset class="form-actions">
            <%= button_tag('Save', class: 'btn btn-primary') %>
          </fieldset>
        <% end %>
      </div>
    </div>
  </div>
</div>
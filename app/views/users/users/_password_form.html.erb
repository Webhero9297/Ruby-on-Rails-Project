<%= form_for(user, url: save_password_user_url, html: {class: 'form-vertical'}) do |f| -%>
  <fieldset>
    <% if user.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(user.errors.count, "error") %> <%= t('errors.prohibited_this_listing_from_being_saved') %></h2>
        <ul>
          <% user.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <%= f.label(:current_password, t('users.current_password')) %>
    <%= f.password_field(:current_password, class: 'input-xlarge') %>

    <%= f.label(:password, t('users.choose_new_password')) %>
    <%= f.password_field(:password, class: 'input-xlarge') %>

    <%= f.label(:password_confirmation, t('users.label.enter_new_password_again')) %>
    <%= f.password_field(:password_confirmation, class: 'input-xlarge') %>
  </fieldset>
  <fieldset>
    <%= f.button(t('button.save'), class: 'btn btn-primary') %>
    <%= link_to(t('button.cancel'), user_url, class: 'btn btn-link', id: "cancel-password") %>
  </fieldset>
<% end -%>

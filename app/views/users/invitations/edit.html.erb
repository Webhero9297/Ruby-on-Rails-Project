<div class="row">
  <div class="span12">

    <div class="box">
      <h1 class="box"><%= t('users.header.set_my_password') %></h1>
      <%= form_for resource, :as => resource_name, :url => invitation_path(resource_name), :html => { :method => :put , class: 'well form-vertical'} do |f| %>
      <%= render(partial: '/users/shared/resource_error_message', locals: {resource: resource}) %>

      <fieldset>
        <%= f.label :password %>
        <%= f.password_field :password, class: 'input-xlarge' %>


        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation, class: 'input-xlarge' %>
        
        <div class="controls">
          <%= f.label :terms_and_conditions, class: "checkbox" do %>
            <%= f.check_box :terms_and_conditions, class: 'checkbox' %>
            <%= t('users.accept_privacy_terms', {PRIVACY: link_to('Privacy Policy', terms_of_use_url), TERMS: link_to('Terms and Conditions', privacy_policy_url)}) %>
          <% end %>
        </div>
        
        
      </fieldset>
      
      <fieldset class="form-actions">
        <%= f.button t('button.set_my_password'), class: 'btn btn-primary' %>
        <%= f.hidden_field :invitation_token %>
      </fieldset>

      <% end %>
    </div>

  </div>
</div>
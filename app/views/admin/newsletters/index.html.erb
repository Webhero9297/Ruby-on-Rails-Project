<%= render(partial: 'admin/statistics/menu') %>
<div class="row-fluid">
  <div class="span12">
    <div class="plate">
      <div class="plate-content">
        <table class="table table-bordered table-condensed">
          <thead>
            <tr>
              <th><%= t('global.subscriptions') %></th>
              <th><%= t('newsletters.activated_subscriptions') %></th>
              <th><%= t('admin.header.subscribers_this_month') %></th>
              <th><%= t('newsletters.activations_month') %></th>
              <th><%= t('admin.header.subscribers_this_year') %></th>
              <th><%= t('newsletters.activations_year') %></th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td><%= Newsletter.number_of_subscribers %></td>
              <td><%= Newsletter.number_of_activations %></td>
              <td><%= Newsletter.number_of_subscribers('month') %></td>
              <td><%= Newsletter.number_of_subscribers('year') %></td>
              <td><%= Newsletter.number_of_activations('month') %></td>
              <td><%= Newsletter.number_of_activations('year') %></td>
            </tr>
          </tbody>
        </table>
        
        <%= link_to(content_tag('i','', class: 'icon-download-alt') + ' ' + t('button.download_email_list') + "(xml)", download_admin_newsletters_url(format: 'xml'), class: 'btn') %>
        <%= link_to(content_tag('i','', class: 'icon-download-alt') + ' ' + t('button.download_email_list') + "(csv)", download_admin_newsletters_url(format: 'csv'), class: 'btn') %>
      </div>
    </div>
  </div>
</div>
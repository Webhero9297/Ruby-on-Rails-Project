<h1>The order <%= @order.order_number %> has been paid</h1>

<ul>
    <li><strong>Price plan:</strong> <%= text_if_missing(@price_plan.name) %></li>
    <li><strong>Duration:</strong> <%= text_if_missing(@price_plan.duration)%> <%= text_if_missing(@price_plan.periodicity) %></li>
    <li><strong>Amount:</strong> <%= text_if_missing("%.2f" % @order.total_amount) %> <%= text_if_missing(@order.currency) %></li>
    <li><strong>Order number:</strong> <%= text_if_missing(@order.order_number) %></li>
    <% if not @order.promotion_code.blank? %>
        <li><strong>Promotion code:</strong> <%= text_if_missing(@order.promotion_code) %></li>
    <% end %>
    <% unless @listings.blank? %>
        <% @listings.each do |listing| %>
            <li>
                <strong>
                    Listing number:
                </strong>
                <%= listing.listing_number %>
            </li>
        <% end %>
    <% end %>
</ul>

<h2>Paid by</h2>
<ul>
    <li><strong>Name:</strong> <%= @user.name %></li>
    <li><strong>Email:</strong> <%= @user.email %></li>
</ul>
